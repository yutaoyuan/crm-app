{
  "name": "crm",
  "version": "1.0.1",
  "description": "客户资料管理系统",
  "main": "electron/main.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "electron": "cross-env NODE_ENV=development ELECTRON_DEV=1 electron .",
    "build": "cross-env NODE_ENV=production electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "backup-db": "node scripts/backup-db.js",
    "restore-db": "node scripts/restore-db.js"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "connect-sqlite3": "^0.9.15",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "csv-parser": "^3.0.0",
    "dompurify": "^3.2.6",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^37.3.1",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.crm.app",
    "productName": "CRM系统",
    "asar": true,
    "asarUnpack": [
      "models/db.js"
    ],
    "extraResources": [
      {
        "from": "databaseFolder",
        "to": "databaseFolder"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/favicon.ico"
    },
    "mac": {
      "category": "public.app-category.business",
      "target": [
        "dmg"
      ],
      "arch": [
        "x64"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "yutaoyuan",
        "repo": "crm-app"
      }
    ]
  }
}